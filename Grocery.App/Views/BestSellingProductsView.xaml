<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Grocery.App.Views.BestSellingProductsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Grocery.App.ViewModels"
    xmlns:models="clr-namespace:Grocery.Core.Models;assembly=Grocery.Core"
    Title="Best Selling Products">

    <CollectionView ItemsSource="{Binding Products}"
                    Margin="12"
                    SelectionMode="None">
        <CollectionView.Header>
            <Grid ColumnDefinitions="50,*,80,110"
                  Padding="0,0,0,4">
                <Label Text="#"
                       FontAttributes="Bold"
                       Grid.Column="0" />
                <Label Text="Product"
                       FontAttributes="Bold"
                       Grid.Column="1" />
                <Label Text="Stock"
                       HorizontalTextAlignment="Center"
                       FontAttributes="Bold"
                       Grid.Column="2" />
                <Label Text="Sold"
                       HorizontalTextAlignment="Center"
                       FontAttributes="Bold"
                       Grid.Column="3" />
            </Grid>
        </CollectionView.Header>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:BestSellingProducts">
                <Grid ColumnDefinitions="50,*,80,110"
                      Padding="0,2">
                    <Label Text="{Binding Ranking}"
                           Grid.Column="0" />
                    <Label Text="{Binding Name}"
                           Grid.Column="1" />
                    <Label Text="{Binding Stock}"
                           HorizontalTextAlignment="Center"
                           Grid.Column="2" />
                    <Label Text="{Binding NrOfSells}"
                           HorizontalTextAlignment="Center"
                           Grid.Column="3" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>