<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             xmlns:m="clr-namespace:Grocery.Core.Models;assembly=Grocery.Core"
             x:Class="Grocery.App.Views.BoughtProductsView"
             x:DataType="vm:BoughtProductsViewModel"
             Title="Admin - Gekochte producten">
    <Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="*">
        <!-- Product selectie -->
        <Picker Grid.Row="0"
                Margin="10"
                Title="Selecteer een product"
                ItemsSource="{Binding Products}"
                ItemDisplayBinding="{Binding Name}"
                SelectedItem="{Binding SelectedProduct, Mode=TwoWay}" />

        <!-- Info / status bericht -->
        <Label Grid.Row="1"
               Margin="10,0,10,5"
               Text="{Binding InfoMessage}"
               FontAttributes="Italic"
               TextColor="Gray" />

        <!-- Lijst met aankopen enkel zichtbaar bij selectie -->
        <Border Grid.Row="2"
                IsVisible="{Binding HasSelection}"
                Stroke="#C49B33" StrokeThickness="4" Padding="5" Margin="10" HorizontalOptions="Fill" VerticalOptions="Fill">
            <CollectionView ItemsSource="{Binding BoughtProductsList}" SelectionMode="None">
                <CollectionView.Header>
                    <Grid Padding="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="Klant" FontAttributes="Bold" />
                        <Label Grid.Column="1" Text="Boodschappenlijst" FontAttributes="Bold" />
                        <Label Grid.Column="2" Text="Datum" FontAttributes="Bold" HorizontalOptions="End" />
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="6" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="m:BoughtProducts">
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="{Binding Client.Name}" />
                            <Label Grid.Column="1" Text="{Binding GroceryList.Name}" />
                            <Label Grid.Column="2" Text="{Binding GroceryList.Date}" HorizontalOptions="End" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <ContentView>
                        <Label Text="Er zijn geen aankopen voor dit product" FontSize="16" HorizontalTextAlignment="Center" />
                    </ContentView>
                </CollectionView.EmptyView>
            </CollectionView>
        </Border>
    </Grid>
</ContentPage>