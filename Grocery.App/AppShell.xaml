<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Grocery.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Grocery.App.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="GroceryApp">

    <TabBar>
        <Tab Title="Home" Icon="grocerylist.png">
            <ShellContent Title="Boodschappenlijsten" ContentTemplate="{DataTemplate local:GroceryListsView}" />
        </Tab>
        <Tab Title="Producten" Icon="products.png">
            <ShellContent Title="Producten" ContentTemplate="{DataTemplate local:ProductView}" />
        </Tab>
        <Tab Title="Meest verkocht" Icon="investment.png">
            <ShellContent Title="Meest verkochte producten" ContentTemplate="{DataTemplate local:BestSellingProductsView}" />
        </Tab>
    </TabBar>
</Shell>
